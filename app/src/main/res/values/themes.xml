<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrainingPlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/navigation_bar</item>
    </style>

    <style name="Theme.TrainingPlanner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TrainingPlanner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TrainingPlanner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/primary_orange</item>
        <item name="colorControlNormal">@color/primary_orange</item>
    </style>
</resources>